<!DOCTYPE html>
<html>
  <head>
    <title>Masdif</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <style><%= yield :stylesheets %></style>
    <%= javascript_importmap_tags %>
    <% if defined?(@webchat_config) && @webchat_config.present? && @webchat_config[:enabled] %>
      <%= javascript_tag do %>
        window.onload = () => {
          Webchat.init("chat", {
          serverAddress: window.location.origin,
          title: "SDiFI-Bot",
          subtitle: "",
          placeholder: "spurning",
          askForFeedback: true,
          feedbackValues: {
          thumbDown: 'negative',
          thumbUp: 'positive',
          untoggle: 'none'
          }
          });
        }
      <% end %>
    <% end %>
  </head>

  <body>
    <%= yield %>
    <div id="chat"></div>
  </body>
</html>
